{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es2022",
        "moduleResolution": "Node16",
        "module": "Node16",
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "strictNullChecks": true,
        "typeRoots": ["./node_modules/@types", "./types/**/*"],
    },
    "ts-node": {
        "files": true,
    },
    "exclude": ["./build"],
}
